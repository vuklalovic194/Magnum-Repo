@model List<Category>
<div class="pt-4">
</div>
<h1>Category</h1>

<div class="row">
	<div class="col-3">
		<a class="btn btn-primary" asp-action="Create" asp-area="Admin">
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
				<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
				<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
			</svg> Create NEW Category
		</a>
	</div>
	<div class="col-4 border border-1" style="margin-left: 65em">
		<form asp-controller="Home" asp-action="Shop" class="d-flex ">
			<input class="form-control me-sm-2" type="text" accept="string" alt="search" name="searchString" placeholder="Search">
			<button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
		</form>
	</div>
</div>
<table id="myTable" class="table table-striped" style="width:40%">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var cat in Model)
		{
			<tr>
				<td>
					@cat.Name
				</td>

				<td>
					<div>
						<a asp-controller="Category" asp-action="Edit" asp-route-categoryid="@cat.Id" class="btn btn-primary mx-2">
							Edit
						</a>
					</div>
				</td>
				<td>
					<div style=" width:50%">
						<form method="post">
							<a asp-action="Delete" asp-controller="Category" asp-route-categoryId="@cat.Id" id="deletebtn" class="btn btn-danger mx-2">
								Delete
							</a>
						</form>
					</div>
				</td>
				
			</tr>
		}
	</tbody>
</table>


@section Scripts{
	<script src="~/js/category.js" asp-append-version="true"></script>
}


